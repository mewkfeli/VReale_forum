<UserControl x:Class="AdminPanel.Moder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminPanel"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 

             Height="120" d:DesignWidth="500">
    <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ui:TextBlock x:Name="username"
              MinWidth="200"  Height="50"
              VerticalAlignment="Center" HorizontalAlignment="Left"
              FontSize="24"
                                                FontFamily="Arial" 
              Margin="0,0,0,60"
              />
            <ui:TextBlock x:Name="password"                      
              MinWidth="200"  Height="50"
              VerticalAlignment="Center" HorizontalAlignment="Left"
              FontSize="24"       
                                                FontFamily="Arial" 
              Margin="0,60,0,0"
              />
            <ui:Button 
              MinWidth="200"  Height="50"
              VerticalAlignment="Center" HorizontalAlignment="Center"
              Content="Удалить модератора"
              FontSize="24"      
                                      FontFamily="Arial" 
              Grid.Column="1" Click="Button_Click"
              />



        </Grid>

    </Border>
    </UserControl>
