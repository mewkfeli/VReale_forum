<ui:FluentWindow x:Class="AdminPanel.AddingModerators"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanel"
        mc:Ignorable="d"
                 WindowStartupLocation="CenterScreen"
                 
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="AddingModerators" Height="450" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="15"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <ui:TitleBar Title="Панель управления модераторами"  FontFamily="Arial"  Grid.ColumnSpan="2"/>
        <ui:TextBlock 
            Grid.Column="1"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="20"
            TextAlignment="Center"
            FontFamily="Arial" 
            Grid.Row="2"
            TextWrapping="Wrap"
            Text="Добавление нового модератора"/>
        <ui:TextBox 
            Grid.Column="1"
            Grid.Row="3"
             PlaceholderText="Логин"
             PreviewTextInput="tboxId_PreviewTextInput"
             PlaceholderEnabled="True"
               Width="160"
               Height="50"
               FontSize="24" 
               x:Name="tboxLogin"
               FontFamily="Arial" 
            />
        <ui:TextBox 
            Grid.Column="1"
            Grid.Row="4"
            x:Name="tboxPassword"
             PlaceholderText="Пароль"
             PreviewTextInput="tboxId_PreviewTextInput"
             PlaceholderEnabled="True"
               Width="160"
               Height="50"
               FontSize="24" 
               FontFamily="Arial" 
            />
        <ui:Button
            Content="Добавить"
            
            Grid.Row="5" Grid.Column="1"
            MinWidth="150"
             Height="50"
             HorizontalAlignment="Center" 
             VerticalAlignment="Center" 
             FontSize="24"
            FontFamily="Arial" Click="Button_Click" 
            />
        

        <ScrollViewer  Grid.Column="0" Grid.Row="2" Grid.RowSpan="4">
            <StackPanel x:Name="stackPanel">
                
            </StackPanel>
        </ScrollViewer>
            
        </Grid>
</ui:FluentWindow>
