<ui:FluentWindow x:Class="AdminPanel.AcceptPostsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanel"
        mc:Ignorable="d"
                 WindowStartupLocation="CenterScreen"

                 
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="AcceptPostsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <ui:TitleBar Title="Главное меню" FontFamily="Arial"  CloseClicked="TitleBar_CloseClicked"/>
        <ui:Button
            Grid.Row="1"
                  MinWidth="300"
                  Height="50"
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center" 
                                  FontFamily="Arial" 
                  FontSize="24"
                  Content="Добавить или удалить модераторов" Click="Button_Click"/>
        <ui:Button
             Grid.Row="2"
             Content="Просмотреть посты"
             MinWidth="300"
                                  FontFamily="Arial" 
             Height="50"
             HorizontalAlignment="Center" 
             VerticalAlignment="Center" 
             FontSize="24" Click="Button_Click_1"
            />
    </Grid>
</ui:FluentWindow>
